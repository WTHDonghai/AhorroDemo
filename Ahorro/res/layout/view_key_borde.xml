<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     >


    <!-- 运算符 -->
    <RadioGroup
        android:id="@+id/operator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         >

        <RadioButton
            android:id="@+id/divide_oper"
            style="@style/operator_button"
            android:text="÷"
            android:textColor="#f00" />

        <RadioButton
            android:id="@+id/multiply_oper"
            style="@style/operator_button"
            android:text="×"
            android:textColor="#00f" />

        <RadioButton
            android:id="@+id/reduce_oper"
            style="@style/operator_button"
            android:text="-"
            android:textColor="#0ff" />

        <RadioButton
            android:id="@+id/add_oper"
            style="@style/operator_button"
            android:text="+"
            android:textColor="#ff0" />
    </RadioGroup>

    <android.support.v7.widget.GridLayout
        android:id="@+id/numbers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="4"
        app:rowCount="4" >

        <Button
            android:id="@+id/number_1"
            style="@style/number_button"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="1" />

        <Button
            android:id="@+id/number_2"
            style="@style/number_button"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="2" />

        <Button
            android:id="@+id/number_3"
            style="@style/number_button"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="3" />

        <Button
            android:id="@+id/number_ac"
            style="@style/number_button"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_vertical"
            app:layout_rowSpan="2"
            app:layout_rowWeight="1"
            android:background="@color/red"
            android:text="AC"
            android:textColor="#fff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/number_4"
            style="@style/number_button"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="4" />

        <Button
            android:id="@+id/number_5"
            style="@style/number_button"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="5" />

        <Button
            android:id="@+id/number_6"
            style="@style/number_button"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="6" />

        <Button
            android:id="@+id/number_7"
            style="@style/number_button"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="7" />

        <Button
            android:id="@+id/number_8"
            style="@style/number_button"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="8" />

        <Button
            android:id="@+id/number_9"
            style="@style/number_button"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="9" />

        <Button
            android:id="@+id/number_eq"
            style="@style/number_button"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_vertical"
            app:layout_rowSpan="2"
            app:layout_rowWeight="1"
            android:background="#9bca3e"
            android:text="="
            android:textColor="#fff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/number_doc"
            style="@style/number_button"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="." />

        <Button
            android:id="@+id/number_0"
            style="@style/number_button"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="0" />

        <Button
            android:id="@+id/number_del"
            style="@style/number_button"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="del" />
    </android.support.v7.widget.GridLayout>

</LinearLayout>